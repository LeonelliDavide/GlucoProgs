<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GlucoMan.Maui.SettingsPage"
             Title="SettingsPage">
    <VerticalStackLayout>
        <HorizontalStackLayout >
            <Label VerticalTextAlignment="Center" Margin="7,0,5,0">Duration of insulin</Label>
            <TimePicker x:Name="tmpkInsulinDuration" VerticalOptions="Center"
                        
                        Format="hh\:mm" />
            <Label VerticalTextAlignment="Center" Margin="3,0,5,0">hh:min</Label>
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>